{
  "name": "concert-booking-backend",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start:auth": "concurrently \"npm run watch:common\" \"ts-node-dev --respawn --transpile-only apps/auth-service/src/main.ts\"",
    "start:concert": "concurrently \"npm run watch:common\" \"ts-node-dev --respawn --transpile-only apps/concert-service/src/main.ts\"",
    "start:booking": "concurrently \"npm run watch:common\" \"ts-node-dev --respawn --transpile-only apps/booking-service/src/main.ts\"",
    "start:notification": "concurrently \"npm run watch:common\" \"ts-node-dev --respawn --transpile-only apps/notification-service/src/main.ts\"",
    "start:dev": "concurrently \"npm run start:auth\" \"npm run start:concert\" \"npm run start:booking\" \"npm run start:notification\"",
    "start:prod:auth": "node dist/apps/auth-service/main.js",
    "start:prod:concert": "node dist/apps/concert-service/main.js",
    "start:prod:booking": "node dist/apps/booking-service/main.js",
    "start:prod:notification": "node dist/apps/notification-service/main.js",
    "start:prod": "concurrently \"npm run start:prod:auth\" \"npm run start:prod:concert\" \"npm run start:prod:booking\" \"npm run start:prod:notification\"",
    "build": "npm run build:common && npm run build:auth && npm run build:concert && npm run build:booking && npm run build:notification",
    "build:common": "cd libs/common && npm run build",
    "build:auth": "nest build auth-service",
    "build:concert": "nest build concert-service",
    "build:booking": "nest build booking-service",
    "build:notification": "nest build notification-service",
    "watch:common": "cd libs/common && tsc --watch",
    "dev": "concurrently \"npm run watch:common\" \"npm run start:dev\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\""
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "11.1.0",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.0",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.0",
    "@nestjs/swagger": "11.2.0",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/uuid": "^9.0.8",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "ioredis": "5.3.2",
    "mongoose": "8.14.2",
    "nodemailer": "^7.0.3",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "swagger-ui-express": "5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.0",
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.2",
    "@types/node": "22.15.17",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "concurrently": "9.1.2",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "jest": "29.5.0",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  }
}

{
  "name": "concert-booking-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:auth": "ts-node-dev --respawn --transpile-only apps/auth-service/src/main.ts",
    "start:concert": "ts-node-dev --respawn --transpile-only apps/concert-service/src/main.ts",
    "start:booking": "ts-node-dev --respawn --transpile-only apps/booking-service/src/main.ts",
    "start:dev": "concurrently \"npm run start:auth\" \"npm run start:concert\" \"npm run start:booking\"",
    "start:prod:auth": "node dist/apps/auth-service/main.js",
    "start:prod:concert": "node dist/apps/concert-service/main.js",
    "start:prod:booking": "node dist/apps/booking-service/main.js",
    "start:prod": "concurrently \"npm run start:prod:auth\" \"npm run start:prod:concert\" \"npm run start:prod:booking\"",
    "build": "npm run build:auth && npm run build:concert && npm run build:booking",
    "build:auth": "nest build auth-service",
    "build:concert": "nest build concert-service",
    "build:booking": "nest build booking-service",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "mongoose": "^7.6.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
